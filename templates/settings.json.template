{
  "permissions": {
    "allow": [
      "Bash(dbt run *)",
      "Bash(dbt test *)",
      "Bash(dbt build *)",
      "Bash(duckdb *)",
      "Bash(psql *)",
      "Bash(snowsql *)",
      "Bash(bq *)",
      "Bash(sqlfluff *)",
      "Bash(python scripts/*)",
      "Bash(python *.py)",
      "Bash(pytest *)",
      "Read(models/**)",
      "Read(analysis/**)",
      "Read(docs/**)",
      "Edit(models/**/*.sql)",
      "Edit(models/**/*.yml)",
      "Edit(analysis/**/*.sql)",
      "Edit(analysis/**/*.py)"
    ],
    "deny": [
      "Bash(* DROP *)",
      "Bash(* TRUNCATE *)",
      "Bash(* DELETE FROM *)",
      "Bash(rm -rf *)",
      "Read(.env*)",
      "Read(**/credentials*)",
      "Read(**/secrets*)",
      "Edit(.env*)",
      "Edit(**/credentials*)"
    ]
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "bash .claude/hooks/validate-sql.sh"
          }
        ]
      },
      {
        "matcher": "execute_sql",
        "hooks": [
          {
            "type": "command",
            "command": "bash .claude/hooks/validate-sql.sh"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "bash .claude/hooks/audit-log.sh"
          }
        ]
      },
      {
        "matcher": "Edit",
        "hooks": [
          {
            "type": "command",
            "command": "bash .claude/hooks/auto-format-sql.sh"
          }
        ]
      },
      {
        "matcher": "Write",
        "hooks": [
          {
            "type": "command",
            "command": "bash .claude/hooks/auto-format-sql.sh"
          }
        ]
      }
    ]
  }
}
